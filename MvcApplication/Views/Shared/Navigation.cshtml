@model INavigationNode<ILink>
@helper RenderTree(INavigationNode<ILink> node)
{
	<li>
		<a href="@node.Value.Url.PathAndQuery">@node.Value.Name</a>
		@if(!node.IsLeaf)
		{
			<span>&#9660;</span>
		}
		@if(node.Children.Any())
		{
			<ul>
				@foreach(var child in node.Children)
				{
					@RenderTree(child)
				}
			</ul>
		}
	</li>
}
@if(Model != null)
{
	<ul class="navigation">
		@RenderTree(Model)
	</ul>
}